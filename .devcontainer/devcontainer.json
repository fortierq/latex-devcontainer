{
    "name": "LaTeX",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "latex",
    "runServices": [
        "latex"
    ],
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "grep -v PDF /etc/ImageMagick-6/policy.xml > /tmp/policy.xml; sudo rm /etc/ImageMagick-6/policy.xml; sudo mv /tmp/policy.xml /etc/ImageMagick-6/policy.xml; sudo chown -R vscode /workspace; git config --global user.email 'qpfortier@gmail.com'; git config --global user.name 'Quentin Fortier'; git clone https://github.com/fortierq/texmf.git /workspace/texmf; git clone https://github.com/fortierq/tikz.git /workspace/tikz",
    "postStartCommand": "cd /workspace/texmf; git pull; cd /workspace/tikz; git pull",
    "extensions": [
        "james-yu.latex-workshop",
        "eamodio.gitlens",
        "christian-kohler.path-intellisense",
        "GitHub.copilot"
    ],
    "settings": {
        // General settings
        "files.eol": "\n",
        // Latex settings
        "latex-workshop.chktex.enabled": false,
        "latex-workshop.latex.clean.subfolder.enabled": true,
        "latex-workshop.latex.autoClean.run": "onBuilt",
        "latex-workshop.latex.recipe.default": "lastUsed",
        "latex-workshop.latex.recipes": [
            {
                "name": "luaescape",
                "tools": [
                    "luaescape"
                ]
            },
            {
                "name": "lualatex",
                "tools": [
                    "lualatex"
                ]
            }
        ],
        "latex-workshop.latex.tools": [
            {
                "name": "luaescape",
                "command": "lualatex",
                "args": [
                    "-interaction=nonstopmode",
                    "-file-line-error",
                    "-shell-escape",
                    "-halt-on-error",
                    "%DOC%"
                ],
                "env": {}
            },
            {
                "name": "lualatex",
                "command": "lualatex",
                "args": [
                    "-interaction=nonstopmode",
                    "-file-line-error",
                    "-halt-on-error",
                    "%DOC%"
                ],
                "env": {}
            }
        ],
        "editor.formatOnSave": false,
        "files.associations": {
            "*.tex": "latex"
        },
    },
}
